<mvc:View
    controllerName="logaligroup.invoices.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>appTitle}">
                    <content>
                        <Panel headerText="{i18n>helloPanel}" class="sapUIResponsiveMargin" width="auto">
                            <content>
                                <mvc:XMLView
                                viewName="logaligroup.invoices.view.HelloPanel"/>
                            </content>
                        </Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
