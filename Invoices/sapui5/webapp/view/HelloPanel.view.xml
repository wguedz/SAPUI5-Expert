<mvc:View
    controllerName="logaligroup.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true" >
        <Panel  headerText="{i18n>HelloPanel}" 
                class="sapUiResponsiveMargin" 
                width="auto" 
                expandable="{device>/system/phone}"
                expanded="{= !${device>/system/phone} }">
            <content>
                <Button id = "helloDialogButton"
                        text="{i18n>HelloDialogBut}" 
                        press=".openDialog" 
                        class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"
                        icon="sap-icon://action" 
                         />            
                <Button text="{i18n>showHelloButtonText}" 
                        press=".onShowHellow" 
                        class="sapUiSmallMarginEnd sapUiHideOnDesktop" />
                <Input  value="{/recipient/name}" 
                        valueLiveUpdate="true"
                        width="60%" />
                <Text text="hello {/recipient/name}" 
                        class="sapUiSmallMargin boldElements" />
            </content>    
        </Panel>
        <core:Fragment fragmentName="logaligroup.sapui5.view.Form01" type="XML"/>
</mvc:View>


