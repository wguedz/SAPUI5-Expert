<mvc:View 
          controllerName="logaligroup.sapui5.controller.invoicesList"
          xmlns="sap.m"  
          xmlns:mvc="sap.ui.core.mvc">

    <List   id="invoicesList"
            headerText="{i18n>invoiceListTitle}" 
            class="SapUiResponsiveMargin" 
            width="auto" 
            items="{northwind>/Invoices}">
            <headerToolbar>
                <Toolbar>
                <ToolbarSpacer/> 
                    <SearchField width="50%" search=".onFilterInvoices">

                    </SearchField>
                </Toolbar>
            </headerToolbar>
            <items>
                <ObjectListItem title="{northwind>Quantity} x {northwind>ProductName}"
                                number="{ parts : [ {path : 'northwind>ExtendedPrice'}, 
                                                    {path : 'currency>/usd'}], 
                                          type : 'sap.ui.model.type.Currency',  
                                          formatOptions:{
                                              showMeaSure: false
                                          }}" 
                                numberUnit = "{currency>/usd}" 
                                numberState="{= ${invoices>ExtendedPrice} > 50 ? 'Success' : 'Error'}">
                </ObjectListItem>                
            </items>
    </List>
</mvc:View>